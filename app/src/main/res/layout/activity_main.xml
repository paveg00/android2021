<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <androidx.cardview.widget.CardView
        android:background="?selectableItemBackground"
        android:clickable="true"
        android:focusable="true"
        android:id="@+id/card_view"
        android:layout_width="fill_parent"
        android:layout_height="@dimen/car_height"
        android:layout_gravity="center"
        android:layout_marginHorizontal="@dimen/default_card_padding"
        android:layout_marginTop="@dimen/card_margin_top"

        app:cardCornerRadius="@dimen/card_corner_radius"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <ImageView
            android:layout_width="@dimen/image_width"
            android:layout_height="fill_parent"
            android:layout_gravity="start"
            android:layout_marginVertical="@dimen/default_card_padding"
            android:layout_marginStart="@dimen/default_card_padding"
            android:contentDescription="@string/image_description"
            android:scaleType="fitCenter"
            android:src="@drawable/cat_1_article" />

        <LinearLayout
            android:layout_width="@dimen/text_card_width"
            android:layout_height="fill_parent"
            android:layout_gravity="end"
            android:layout_marginVertical="@dimen/default_card_padding"
            android:layout_marginEnd="@dimen/default_card_padding"
            android:orientation="vertical">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="start"
                android:text="@string/date" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="end"
                android:layout_marginTop="@dimen/default_card_padding"
                android:text="@string/text" />
        </LinearLayout>

    </androidx.cardview.widget.CardView>


</androidx.constraintlayout.widget.ConstraintLayout>